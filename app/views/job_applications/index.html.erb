<%= render layout: "shared/page_wrapper" do %>
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Job Applications</h1>
  </div>

  <% if @job_applications.any? %>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-700">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Company</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Job Title</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Applied Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Days Since Application</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
          <% @job_applications.each do |application| %>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900 dark:text-white"><%= application.company_name %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900 dark:text-gray-200"><%= application.job_title %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-500 dark:text-gray-400"><%= application.application_date.strftime("%b %d, %Y") %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                  <%= case application.current_status
                      when 'applied' then 'bg-blue-100 text-blue-800'
                      when 'screening' then 'bg-yellow-100 text-yellow-800'
                      when 'assessment' then 'bg-purple-100 text-purple-800'
                      when 'interviewing' then 'bg-cyan-100 text-cyan-800'
                      when 'offer' then 'bg-green-100 text-green-800'
                      when 'rejected' then 'bg-red-100 text-red-800'
                      when 'closed' then 'bg-gray-100 text-gray-800'
                      end %>">
                  <%= application.current_status.titleize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-500 dark:text-gray-400"><%= application.days_since_application %> days</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to "View", job_application_path(application), class: "text-teal-600 hover:text-teal-900 mr-3" %>
                <%= link_to "Edit", edit_job_application_path(application), class: "text-cyan-600 hover:text-cyan-900 mr-3" %>
                <%= button_to "Delete", job_application_path(application), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-8 text-center">
      <p class="text-gray-600 dark:text-gray-300 mb-4">No job applications yet. Start tracking your applications!</p>
      <%= link_to "Add Your First Application", new_job_application_path, class: "bg-teal-600 hover:bg-teal-700 text-white px-6 py-2 rounded-lg font-semibold inline-block" %>
    </div>
  <% end %>
<% end %>
