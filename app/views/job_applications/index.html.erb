<%= render layout: "shared/page_wrapper" do %>
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Job Applications</h1>
  </div>

  <% if @job_applications.any? %>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-700">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Company</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Job Title</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Applied Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Days Since Application</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
          <% @job_applications.each do |application| %>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900 dark:text-white"><%= application.company_name %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900 dark:text-gray-200"><%= application.job_title %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-500 dark:text-gray-400"><%= application.application_date.strftime("%b %d, %Y") %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                  <%= case application.current_status
                      when 'applied' then 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200'
                      when 'screening' then 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200'
                      when 'assessment' then 'bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200'
                      when 'interviewing' then 'bg-cyan-100 text-cyan-800 dark:bg-cyan-900 dark:text-cyan-200'
                      when 'offer' then 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200'
                      when 'rejected' then 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200'
                      when 'closed' then 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300'
                      end %>">
                  <%= application.current_status.titleize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-500 dark:text-gray-400"><%= application.days_since_application %> days</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <div class="flex items-center space-x-3">
                  <%= link_to job_application_path(application), class: "text-teal-600 hover:text-teal-900 dark:text-teal-400 dark:hover:text-teal-300", title: "View" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                  <% end %>
                  <%= link_to edit_job_application_path(application), class: "text-cyan-600 hover:text-cyan-900 dark:text-cyan-400 dark:hover:text-cyan-300", title: "Edit" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                  <% end %>
                  <%= button_to job_application_path(application), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300", title: "Delete" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= render "shared/pagy_nav", pagy: @pagy %>
    </div>
  <% else %>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-8 text-center">
      <p class="text-gray-600 dark:text-gray-300 mb-4">No job applications yet. Start tracking your applications!</p>
      <%= link_to "Add Your First Application", new_job_application_path, class: "bg-teal-600 hover:bg-teal-700 text-white px-6 py-2 rounded-lg font-semibold inline-block" %>
    </div>
  <% end %>
<% end %>
